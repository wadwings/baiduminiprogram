        <view id="btn12" data-src="12" class="btn full {{hover[12]}}" hover-class="hoverKey" hover-stay-time="5000" bindtap="play"></view>
        <view id="btn13" data-src="13" class="btn full {{hover[13]}}" hover-class="hoverKey" hover-stay-time="5000" bindtap="play"></view>
    </view>
    <view class="grid bottom">
        <view id="btn14" data-src="14" class="btn double {{hover[14]}}" hover-class="hoverKey" hover-stay-time="5000" bindtap="play"></view>
