<view class="control">
    <view class="center">
        <button class="collection" style="color:{{color}}" bindtap="navigateTo"><text>作品</text></button>
    </view>
    <view class="center relative">
        <view>{{music}}</view>
        <image class="down" src={{arrow}} s-if={{!start}} bindtap="selectMusic"></image>
        <view class="musicList" s-if={{select}}>
            <view class="musicBlock" data-music="{{item.name}}" data-extention="{{item.extention}}" bindtap="ChangeMusic" s-for={{list}}>
                {{item.name}}
            </view>
        </view>
    </view>
    <view class="center" style="position:relative" bindtap="recorder"><button class="black collection center"><text>{{status}}</text>
        <view class="timeCounter">
            <view style="width:20px" class="center">
                <image class="redpoint" src='../../images/redpoint.png'>
            </view>
            <view class="recordTime center">{{recordTime}}</view>
        </view>
    </button>
    </view>
</view>
<view class="keyboard grid">
    <view class="grid top">
        <view id="btn1" data-src="1" class="btn full {{hover[1]}}" hover-class="hoverKey" hover-stay-time="5000" bindtap="play"></view>
        <view id="btn2" data-src="2" class="btn full {{hover[2]}}" hover-class="hoverKey" hover-stay-time="5000" bindtap="play"></view>
        <view id="btn3" data-src="3" class="btn full {{hover[3]}}" hover-class="hoverKey" hover-stay-time="5000" bindtap="play"></view>
        <view class="grid">
            <view id="btn4" data-src="4" class="btn double {{hover[4]}}" hover-class="hoverKey" hover-stay-time="5000" bindtap="play"></view>
            <view>
                <view id="btn5" data-src="5" class="btn full {{hover[5]}}" hover-class="hoverKey" hover-stay-time="5000" bindtap="play"></view>
                <view id="btn6" data-src="6" class="btn full {{hover[6]}}" hover-class="hoverKey" hover-stay-time="5000" bindtap="play"></view>
            </view>
        </view>
    </view>
    <view class="top">
        <view id="btn7" data-src="7" class="btn half {{hover[7]}}" hover-class="hoverKey" hover-stay-time="5000" bindtap="play"></view>
        <view id="btn8" data-src="8" class="btn half {{hover[8]}}" hover-class="hoverKey" hover-stay-time="5000" bindtap="play"></view>
    </view>
    <view>
        <view id="btn9" data-src="9" class="btn full {{hover[9]}}" hover-class="hoverKey" hover-stay-time="5000" bindtap="play"></view>
    </view>
    <view class="grid">
